{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "ignoreComments": true }],
    "class-methods-use-this": "off",
    "no-param-reassign": "off"
  },
  "settings": {
    "jest": {
      "version": 26
    }
  }
}
